		"eslint-plugin-react-refresh": "^0.4.7",
		"postcss": "^8.4.38",
		"rollup": "^4.17.2",
		"rollup-plugin-esbuild": "^6.1.1",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
